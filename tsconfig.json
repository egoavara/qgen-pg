{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "composite": true,
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  }
}